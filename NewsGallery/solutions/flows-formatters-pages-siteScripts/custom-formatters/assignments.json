{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
    "hideListHeader": true,
    "hideSelection": true,
    "rowFormatter": {
      "debugMode": true,
      "elmType": "div",
      "style": {
        "padding": "12px",
        "overflow": "hidden",
        "border-radius": "2px",
        "box-shadow": "0 1.6px 3.6px 0 #dddddd, 0 0.3px 0.9px 0 #e3e3e3",
        "margin-bottom": "12px"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "text-align": "left"
          },
          "children": [
            {
              "elmType": "div",
              "style": {
                "font-size": "20px",
                "font-weight": "600",
                "padding-bottom": "8px"
              },
              "txtContent": "[$Title]"
            },
            {
              "elmType": "div",
              "txtContent": "[$Brief_x0020_Description]",
              "style": {
                "padding-bottom": "4px",
                "font-size": "16px"
              }
            },
            {
              "elmType": "div",
              "txtContent": "[$Details]",
              "style": {
                "color": "grey",
                "padding-bottom": "4px"
              }
            },
            {
              "elmType": "div",
              "txtContent": "= 'Due on: ' + toLocaleDateString([$Due_x0020_Date])",
              "style": {
                "font-size": "16px",
                "padding-bottom": "4px"
              }
            },
            {
              "elmType": "div",
              "txtContent": "= 'Weight: ' + [$Weight] + ' points'",
              "style": {
                "font-size": "16px",
                "padding-bottom": "4px"
              }
            },
            {
              "elmType": "button",
              "style": {
                "font-family": "FabricMDL2Icons",
                "background-color": "transparent",
                "border": "0",
                "cursor": "pointer",
                "padding": "10px"
              },
              "customRowAction": {
                "action": "editProps"
              },
              "attributes": {
                "iconName": "Edit"
              }
            }
          ]
        }
      ]
    }
  }